<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/date"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/edtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="年/月/日"
                android:inputType="date"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/imgCal"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/calendar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="時間："
                android:textSize="28sp" />

            <EditText
                android:id="@+id/edtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="08:00"
                android:inputType="time"
                android:minWidth="30dp"
                android:textSize="22sp" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="位置"
                android:textSize="22sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="右手"
                android:textSize="22sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="左手"
                android:textSize="22sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="相差"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="20公分處"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edtRight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:minWidth="50dp"
                android:textSize="22sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edtLeft1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:minWidth="50dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtMinus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="30公分處"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edtRight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:minWidth="50dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edtLeft2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:minWidth="50dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtMinus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="50公分處"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edtRight3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:minWidth="50dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edtLeft3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:minWidth="50dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtMinus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_gravity="center"
                android:text="※ 請見「治吧-淋巴水腫照護」"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:visibility="invisible" />


            <Button
                android:id="@+id/btnHow"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_columnSpan="3"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="如何測量？" />

            <ImageButton
                android:id="@+id/btnCheck"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:layout_columnSpan="1"
                android:background="@drawable/check" />
        </GridLayout>
    </LinearLayout>

</ScrollView>
