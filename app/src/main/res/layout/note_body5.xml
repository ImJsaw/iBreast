<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="11"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="日期"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtOne"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="噁心"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtTwo"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="嘔吐"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtThree"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="腹瀉"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtFour"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="便祕"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtFive"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="掉髮"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtSix"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="疲倦"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtSeven"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="食慾不振"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtEight"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="口腔炎"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtNine"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="手足症候群"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtHurt"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="疼痛指數"
            android:textSize="22sp" />

        <ListView
            android:id="@+id/list_body5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_columnSpan="11"
            android:layout_margin="4dp"
            android:layout_rowWeight="1" />
    </GridLayout>
</HorizontalScrollView>

